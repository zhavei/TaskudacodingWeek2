<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Page"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#fff"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/et_usernameinputLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bmi_edittext"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:hint="Email Anda"
        android:textColor="#000000"
        android:textColorHint="#fff"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/et_passwordinputLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_usernameinputLogin"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#fff"
        android:background="@drawable/bmi_edittext"
        android:padding="12dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/bt_loginbuttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="false"
        android:text="Login"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="#fafafa"
        android:background="@drawable/bmi_button"
        app:layout_constraintTop_toBottomOf="@id/et_passwordinputLogin"/>

    <TextView
        android:id="@+id/tv_registertextLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_loginbuttonLogin"
        android:layout_margin="10dp"
        android:text="Tidak Punya akun? Daftar Disini!"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_skipLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_registertextLogin"
        android:layout_margin="10dp"
        android:text="Aktifkan Internet Anda"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>