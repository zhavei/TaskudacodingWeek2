<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".age.calculator.AgeMainActivity">

    <RelativeLayout
        android:background="@drawable/age_editextstyle2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="10dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Halaman Depan"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/iv_arrow_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_margin="14dp"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:elevation="10dp"
            android:foreground="@drawable/ic_baseline_arrow_back_24" />

    </RelativeLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icontask"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="AGE Calculator"
        android:textColor="#000"
        android:textSize="45sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:text="Masukan tahun Lahir Anda" />

    <EditText
        android:id="@+id/age_et_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/age_editextstyle"
        android:hint="Tahun Lahir"
        android:inputType="number"
        android:minWidth="200dp"
        android:padding="10dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/age_bt_main"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:layout_marginTop="20dp"
        android:minWidth="200dp"
        android:text="Hitung" />

    <TextView
        android:id="@+id/age_tv_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bmi_edittext"
        android:minWidth="200dp"
        android:padding="10dp"
        android:text="Umur Anda "
        android:textColor="#000"
        android:textSize="20sp" />

</LinearLayout>