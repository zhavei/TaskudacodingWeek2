<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:background="@drawable/background_sport_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_list_sport_car"
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/listv_tesla" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_list_sport_cars"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="Mobil"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_deskrip_item_list_sport_car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="deskripsi item"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>