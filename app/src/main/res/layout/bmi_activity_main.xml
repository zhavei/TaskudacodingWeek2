<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".bmicalculator.BmimainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icontask"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="BMI Calculator!"
        android:textColor="#000"
        android:textSize="45sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:text="Berat Badan Anda dalam KG" />

    <EditText
        android:id="@+id/bmi_et_berat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bmi_edittext"
        android:inputType="numberDecimal"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:text="Tinggi Badan Anda Dalam Cm" />

    <EditText
        android:id="@+id/bmi_et_tinggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bmi_edittext"
        android:inputType="numberDecimal"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bmi_bt_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/bmi_button"
            android:text="Hitung"
            android:textColor="#fafafa" />

        <Button
            android:id="@+id/bmi_bt_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/bmi_button_reset"
            android:text="Reset"
            android:textColor="#fafafa" />

    </LinearLayout>


    <TextView
        android:id="@+id/bmi_tv_yourindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="Index BMI Anda"
        android:background="@drawable/bmi_edittext"
        android:textColor="#000"
        android:padding="10dp"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/bmi_tv_result_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000"
        android:hint="Info"
        android:textSize="15sp" />


</LinearLayout>